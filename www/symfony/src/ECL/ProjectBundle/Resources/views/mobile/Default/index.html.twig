            <ul>
                <li>{{ 'project.section_1.text_1'|trans|raw }}</li>
                <li>{{ 'project.section_1.text_2'|trans|raw }}</li>
                <li>{{ 'project.section_1.text_3'|trans|raw }}</li>
                <li>{{ 'project.section_1.text_4'|trans|raw }}</li>
                <li>{{ 'project.section_1.text_5'|trans|raw }}</li>
                <li>{{ 'project.section_1.text_6'|trans|raw }}</li>
            </ul>
        </section>
    </div>
    <div>
        <h2 id="title">{{ 'project.section_2.title'|trans }}</h2>
