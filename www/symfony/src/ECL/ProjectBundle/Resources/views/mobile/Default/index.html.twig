{% extends "ECLDefaultBundle::mobile/base.html.twig" %}
{% block title %}{{ parent() }} | {{ 'section.project.title' | trans }}{% endblock %}
{% block description %}{{ parent() }} {{ 'project.description' | trans }}{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{asset('bundles/eclproject/mobile/css/main.css')}}">
{% endblock %}
{% block main %}
<article id="main_article_wrapper">
