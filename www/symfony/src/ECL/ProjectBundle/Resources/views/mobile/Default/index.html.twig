                <li>{{ 'project.section_2.text_5'|trans|raw }}</li>
                <li>{{ 'project.section_2.text_6'|trans|raw }}</li>
            </ul>
        </section>
    </div>
    <div>
        <h2 id="title">{{ 'project.section_3.title'|trans }}</h2>
        <p>URL: <a href="http://www.eduardocasas.com/{{ app.request.locale }}/" target="_blank">http://www.eduardocasas.com/{{ app.request.locale }}/</a></p>
