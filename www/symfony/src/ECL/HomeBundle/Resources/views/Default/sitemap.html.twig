<?xml version="1.0" encoding="utf-8"?>
<urlset
xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9
http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd"
>
    <!-- About Me -->
    <url><loc>{{ url('ecl_home_homepage') }}</loc></url>
    <!-- Curriculum -->
    <url><loc>{% if app.request.locale == 'en' %}{{ url('ecl_curriculum_homepage_en') }}{% else %}{{ url('ecl_curriculum_homepage_es') }}{% endif %}</loc></url>
    <!-- Blog -->
    <url><loc>{{ url('ecl_blog_homepage', { _locale: app.request.locale } ) }}</loc></url>
    {% for page in 2..pages %}
    <url><loc>{{ url('ecl_blog_homepage', { tag_slug: page } ) }}</loc></url>
    {% endfor %}
    <!-- Blog Tags -->
    {% for tag in tags %}
        <url><loc>{{ url('ecl_blog_homepage', { tag_slug: tag.slug } ) }}</loc></url>
    {% endfor %}
    <!-- Blog Articles -->
    {% for article in articles %}
    <url>
        <loc>{{ url('ecl_blog_article', { date: article.date|date('d-m-Y'), slug: article.slug } ) }}</loc>
        <lastmod>{{ article.date|date('c') }}</lastmod>
    </url>
    {% endfor %}
    <!-- Contact -->
    <url><loc>{% if app.request.locale == 'en' %}{{ url('ecl_contact_homepage_en') }}{% else %}{{ url('ecl_contact_homepage_es') }}{% endif %}</loc></url>
</urlset>
