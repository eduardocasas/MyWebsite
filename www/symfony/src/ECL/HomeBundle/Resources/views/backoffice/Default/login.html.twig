{% extends "ECLDefaultBundle::base.html.twig" %}
{% block title %}{{ parent() }} | Backoffice | Login{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('bundles/ecl/css/backoffice/login.css') }}">
{% endblock %}
{% block main %}
<article id="main_article_wrapper">
    <h1 id="title">Backoffice Login</h1>
    {% if error %}<p>{{ error.message }}</p>{% endif %}
    <form action="{{ path('login_check') }}" method="post" id="login_form">
        <fieldset>
            <label for="username">Usuario:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autofocus="autofocus">
        </fieldset>
        <fieldset>
            <label for="password">Contrase√±a:</label>
            <input type="password" id="password" name="_password" required="required">
        </fieldset>
        <input type="submit" class="submit_button" value="Entrar">
    </form>
</article>
{% endblock %}