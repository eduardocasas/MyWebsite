{% extends "ECLDefaultBundle::backoffice_base.html.twig" %}
{% block title %}{{ parent() }} | Backoffice | Artículos {% endblock %}
{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('bundles/ecl/css/backoffice/article.css') }}">
{% endblock %}
{% block backoffice_main %}
<article id="main_article_wrapper">
    <a href="{{ url('ecl_blog_backoffice_articles_create') }}" class="button" id="create_article_button">Crear</a>
    <h1 id="title">Artículos</h1>
    <table id="article_list">
        <thead>
            <tr>
                <th class="delete_field"></th>
                <th class="edit_field"></th>
                <th class="name_field">Nombre</th>
            </tr>
        </thead>
        <tbody>
        {% for item in articles %}
            <tr>
                <td class="delete_field"><a href="{{ path('ecl_blog_backoffice_articles_delete', { 'id': item.id }) }}" title="borrar"></a></td>
                <td class="edit_field"><a href="{{ path('ecl_blog_backoffice_articles_edit', { 'id': item.id }) }}" title="editar"></a></td>
                <td class="name_field">{{ item.title }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</article>
{% endblock %}