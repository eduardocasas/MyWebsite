<?xml version="1.0" encoding="utf-8"?>
<urlset
xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9
http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd"
>
    <!-- About Me -->
    <url><loc>{{ url('home') }}</loc></url>
    <!-- Curriculum -->
    <url><loc>{% if app.request.locale == 'en' %}{{ url('curriculum_en') }}{% else %}{{ url('curriculum_es') }}{% endif %}</loc></url>
    <!-- Projects -->
    <url><loc>{% if app.request.locale == 'en' %}{{ url('project_en') }}{% else %}{{ url('project_es') }}{% endif %}</loc></url>
    <!-- Contact -->
    <url><loc>{% if app.request.locale == 'en' %}{{ url('contact_en') }}{% else %}{{ url('contact_es') }}{% endif %}</loc></url>
    <!-- Blog -->
    <url><loc>{{ url('blog', { _locale: app.request.locale } ) }}</loc></url>
    {% for page in 2..pages %}
    <url><loc>{{ url('blog', { tag_slug: page } ) }}</loc></url>
    {% endfor %}
    <!-- Blog Tags -->
    {% for tag in tags %}
        <url><loc>{{ url('blog', { tag_slug: tag.slug } ) }}</loc></url>
    {% endfor %}
    <!-- Blog Articles -->
    {% for article in articles %}
    <url>
        <loc>{{ url('blog_article', { date: article.date|date('d-m-Y'), slug: article.slug } ) }}</loc>
        <lastmod>{{ article.date|date('c') }}</lastmod>
    </url>
    {% endfor %}
</urlset>
